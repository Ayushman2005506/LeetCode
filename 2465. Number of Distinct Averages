class Solution {
public:
    int distinctAverages(vector<int>& nums) {
        unordered_set<double> s;
        
        while(!nums.empty()){
        int min=INT_MAX;
        int max=0;
        int min_index=0;
        int max_index=0;
        for(int i=0;i<nums.size();i++){
            if(nums[i]>max){
                max=nums[i];
                max_index=i;
            }
            if(nums[i]<min){
                min=nums[i];
                min_index=i;
            }
         }
         double avg=(min+max)/2.0;
         s.insert(avg);
         if(min_index >max_index) {
                nums.erase(nums.begin()+min_index);
                nums.erase(nums.begin()+max_index);
            } else {
                nums.erase(nums.begin()+max_index);
                nums.erase(nums.begin()+min_index);
            }
        }

        int ans=s.size();
        return ans;
    }
};
