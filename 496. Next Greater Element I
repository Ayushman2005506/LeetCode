class Solution {
public:
    vector<int> nextGreaterElement(vector<int>& nums1, vector<int>& nums2) {
        vector<int> ans;
        
        for(int i=0; i<nums1.size();i++) {
            int pos=-1;
            for(int k=0; k<nums2.size();k++) {
                if(nums2[k]==nums1[i]) {
                    pos=k;
                    break;
                }
            }
            int a=-1;
            for(int j=pos+1; j<nums2.size();j++) {
                if(nums2[j]>nums1[i]) {
                    a=nums2[j];
                    break;
                }
            }
            ans.push_back(a);
        }
        return ans; 
    }
};
