class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        while( head!=nullptr && head->val==val){
            ListNode* b= head;
            head=head->next;
            delete b;
        }
        ListNode* temp=head;
        while(temp){
        if(temp->next!=nullptr && temp->next->val==val){
            ListNode* a=temp->next;
            temp->next=temp->next->next;
            delete a;
        }
        else{
         temp=temp->next;
        }
        }
    
        return head;
    }
};
