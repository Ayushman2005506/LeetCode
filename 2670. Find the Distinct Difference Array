class Solution {
public:
    vector<int> distinctDifferenceArray(vector<int>& nums) {
        vector<int> ans;
        for(int i=0;i<nums.size();i++){
            unordered_set <int> s1;
            for(int j=0;j<=i;j++){
                s1.insert(nums[j]);
            }
            int a=s1.size();

            unordered_set <int> s2;
            for(int k=i+1;k<nums.size();k++){
                s2.insert(nums[k]);
            }
            int b=s2.size();

            int c=a-b;
            ans.push_back(c);
        }
        return ans;
    }
};
