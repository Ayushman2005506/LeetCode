class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        int n=arr.size();
        sort(arr.begin(), arr.end());

        int min_diff=INT_MAX;
        for(int i=0;i<n-1;i++){
            if(arr[i+1]-arr[i]<min_diff){
                min_diff=arr[i+1]-arr[i];
            }
        }
        vector<vector<int>> answer;
        for(int i=0;i<n-1;i++){
            if(arr[i+1]-arr[i]==min_diff){
                answer.push_back({arr[i],arr[i+1]});
            }
        }

        return  answer;

    }
};
        
