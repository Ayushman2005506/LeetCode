class Solution {
public:
    vector<string> sortPeople(vector<string>& names, vector<int>& heights) {
        int n=heights.size();
        vector<int> indices(n);
        for(int i=0;i<n;i++){
        indices[i]=i;
       }

       for (int i = 0; i < n - 1; i++) {
    int maxIndex = i;

    for (int j = i + 1; j < n; j++) {
        if (heights[indices[j]] > heights[indices[maxIndex]]) {
            maxIndex = j;
        }
    }
    swap(indices[i],indices[maxIndex]);
    }
    vector<string> result;
    for(int i=0;i<n;i++){
    result.push_back(names[indices[i]]);
    }
    return result;

    }
};
