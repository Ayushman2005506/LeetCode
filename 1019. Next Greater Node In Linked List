class Solution {
public:
    vector<int> nextLargerNodes(ListNode* head) {
        int count=0;
        ListNode* temp= head;
        while(temp!=nullptr){
            count++;
            temp=temp->next;
        }

        ListNode* temp1= head;
        vector <int> arr(count);
        for (int i=0; i<count; i++) {
        arr[i]=temp1->val;
        temp1=temp1->next;
        }

        vector <int> answer;
        for(int i=0;i<count;i++){
            bool a=false;
            for(int j=i+1;j<count;j++){
                if(arr[j]>arr[i]){
                    a=true;
                    answer.push_back(arr[j]);
                    break;
                }
                else{
                    continue;
                }
            }
            if(a==false){
                answer.push_back(0);
            }
        }
        return answer;
    }
};
