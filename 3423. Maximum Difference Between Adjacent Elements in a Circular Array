class Solution {
public:
    int maxAdjacentDistance(vector<int>& nums) {
        int max=0;
        int n=nums.size();
        for(int i=0;i<nums.size()-1;i++){
            if(abs(nums[i]-nums[i+1])>max){
                max=abs(nums[i]-nums[i+1]);
            }
        }
        int ans=0;
        if(abs(nums[0]-nums[n-1])>max){
            ans=abs(nums[0]-nums[n-1]);
            return ans;
        }
        return max;
    }
};
